{
  "name": "review-reminder",
  "description": "智能复习提醒和管理",
  "version": "1.0.0",
  "author": "Claude Code",
  "created": "2025-12-24",

  "capabilities": {
    "scan_knowledge_base": true,
    "calculate_due_reviews": true,
    "priority_sorting": true,
    "send_reminders": true,
    "track_completion": true,
    "handle_overdue": true
  },

  "schedule": {
    "scan_frequency": "daily",
    "reminder_times": ["09:00", "14:00", "20:00"],
    "timezone": "Asia/Shanghai",
    "auto_run": false
  },

  "ebbinghaus": {
    "intervals": [1, 3, 7, 14, 30, 90],
    "unit": "days",
    "max_cycles": 6,
    "maintenance_interval": 180
  },

  "priority_rules": {
    "overdue": {
      "weight": 10,
      "calculation": "max(0, overdue_days)",
      "max_overdue_days": 30
    },
    "today": {
      "weight": 8,
      "status": "due_today"
    },
    "tomorrow": {
      "weight": 5,
      "status": "due_tomorrow"
    },
    "low_mastery": {
      "weight": 7,
      "threshold": 3,
      "formula": "(5 - mastery) * 1.5"
    },
    "important": {
      "weight": 6,
      "tags": ["#重要", "#核心", "#重点"]
    }
  },

  "notification": {
    "enabled": true,
    "channels": ["terminal", "daily_note"],
    "format": "markdown",
    "include_statistics": true,
    "include_recommendations": true
  },

  "tracking": {
    "record_performance": true,
    "record_time_spent": true,
    "calculate_completion_rate": true,
    "weekly_summary": true,
    "monthly_summary": true,
    "save_to_history": true
  },

  "mastery_adjustment": {
    "excellent": {
      "score": 5,
      "adjustment": "+1",
      "description": "显著提升"
    },
    "good": {
      "score": 4,
      "adjustment": "0",
      "description": "保持稳定"
    },
    "fair": {
      "score": 3,
      "adjustment": "-1",
      "description": "轻微下降"
    },
    "poor": {
      "score": 2,
      "adjustment": "-2",
      "description": "大幅下降"
    },
    "forgotten": {
      "score": 1,
      "adjustment": "-2",
      "description": "需要重新学习",
      "reset_cycle": true
    }
  },

  "overdue_handling": {
    "1-3_days": {
      "action": "warning",
      "mastery_penalty": 0,
      "message": "请尽快补上复习"
    },
    "4-7_days": {
      "action": "urgent",
      "mastery_penalty": -1,
      "message": "立即复习，降低掌握度1星"
    },
    "8+_days": {
      "action": "relearn",
      "mastery_penalty": -2,
      "reset_cycle": true,
      "message": "重新学习，重置复习周期"
    }
  },

  "tools": [
    "read",
    "search",
    "list_files",
    "edit",
    "write"
  ],

  "permissions": {
    "read": [
      "ai-ml/**",
      "programming/**",
      "tech-knowledge/**",
      "daily-notes/**"
    ],
    "write": [
      "daily-notes/*.md",
      "review-plans/*.md",
      "stats/*.json"
    ]
  },

  "output": {
    "reminder_format": "markdown",
    "include_due_list": true,
    "include_statistics": true,
    "include_recommendations": true,
    "include_time_estimates": true
  },

  "review_modes": {
    "quick": {
      "duration": 15,
      "description": "快速回顾核心概念"
    },
    "active_recall": {
      "duration": 30,
      "description": "主动回忆测试"
    },
    "deep": {
      "duration": 60,
      "description": "深度复习完整内容"
    }
  }
}
